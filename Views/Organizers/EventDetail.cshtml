
@{
    ViewData["Title"] = "EventDetail";
    Layout = "~/Views/Shared/_OriganizerDashboard.cshtml";
}

<h1>@Model.Title</h1>

<dl class="row">
    <dt class="col-sm-2">Event ID:</dt>
    <dd class="col-sm-10">@Model.EventID</dd>

    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Start Time:</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>

    <dt class="col-sm-2">End Time:</dt>
    <dd class="col-sm-10">@Model.EndTime</dd>

    <dt class="col-sm-2">Location:</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Quantity Tickets:</dt>
    <dd class="col-sm-10">@Model.QuantityTickets</dd>

    <dt class="col-sm-2">Price:</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Description:</dt>
    <dd class="col-sm-10">@Model.Description</dd>

</dl>

<div id="dynamicDetails"></div>

<div>
    <a asp-action="Index">Back to List</a> | <a asp-action="UpdateEvent" asp-route-id="@Model?.EventID"><i class="fa-solid fa-edit me-3"></i>Edit</a>

</div>
